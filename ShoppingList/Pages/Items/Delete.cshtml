@page
@model ShoppingList.Pages.Items.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h3>Are you sure you want to delete this Item?</h3>
</div>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.List.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.List.Item)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="List.Id" />
